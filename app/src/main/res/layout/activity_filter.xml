<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".FilterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:minHeight="44dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/bloom_native_ic_back"
            android:stateListAnimator="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="#FFF"
                android:src="@drawable/ic_add_text"
                android:stateListAnimator="@null" />

            <ImageButton
                android:layout_width="51dp"
                android:layout_height="44dp"
                android:background="#FFF"
                android:src="@drawable/ic_add_emoji"
                android:stateListAnimator="@null" />

            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="#FFF"
                android:src="@drawable/ic_add_sticker"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="67dp"
                android:layout_height="44dp"
                android:backgroundTint="#FFFFFF"
                android:enabled="true"
                android:fontFamily="@font/proxima_nova_regular"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                android:text="Next"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/bloom_native_main"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <com.bloomhigh.playground.ImageConainter
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            tools:listitem="@layout/item_filter"
            android:clipToPadding="false"
            tools:itemCount="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:lineSpacingExtra="3sp"
            android:text="Brightness"
            android:textColor="#1b252e"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv" />

        <SeekBar
            android:id="@+id/sbBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:progress="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBrightness" />

        <TextView
            android:id="@+id/tvWarmth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:lineSpacingExtra="3sp"
            android:text="Warmth"
            android:textColor="#1b252e"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sbBrightness" />

        <SeekBar
            android:id="@+id/sbWarmth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:progress="62"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWarmth" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>